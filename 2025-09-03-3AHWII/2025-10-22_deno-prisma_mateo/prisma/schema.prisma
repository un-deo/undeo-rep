datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "client"
  runtime  = "deno"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  fullname  String?
  createdAt DateTime @default(now())
}

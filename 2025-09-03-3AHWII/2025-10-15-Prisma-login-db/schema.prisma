datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client"
    output   = "client"
    runtime  = "deno"
}

model User {
    id       String @id @default(uuid())
    name     String @unique
    email    String @unique
    password String
    post     post[]
}

model post {
    id      String @id @default(uuid())
    title   String
    content String
    user    User   @relation(fields: [userId], references: [id])
    userId  String
}
